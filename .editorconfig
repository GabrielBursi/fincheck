# EditorConfig configuration for Fincheck monorepo

# Top-most EditorConfig file
root = true

# Default for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# TypeScript, JavaScript, JSX, JSON
[*.{js,mjs,cjs,jsx,ts,tsx,json}]
indent_style = space
indent_size = 2

# YAML, Markdown
[*.{yaml,yml,md}]
indent_style = space
indent_size = 2

# Shell scripts
[*.{sh,bash}]
indent_style = space
indent_size = 2

# Makefile
[Makefile]
indent_style = tab

# Markdown â€” preserve trailing spaces for line breaks
[*.md]
trim_trailing_whitespace = false
