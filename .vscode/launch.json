{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch API (NestJS)",
      "program": "${workspaceFolder}/apps/api/src/main.ts",
      "restart": true,
      "runtimeArgs": [
        "-r",
        "ts-node/register",
        "-r",
        "tsconfig-paths/register"
      ],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "env": {
        "TS_NODE_PROJECT": "${workspaceFolder}/apps/api/tsconfig.json"
      },
      "outFiles": [
        "${workspaceFolder}/apps/api/dist/**/*.js"
      ]
    },
    {
      "type": "node",
      "request": "attach",
      "name": "Attach to Process",
      "processId": "${command:PickProcess}",
      "skipFiles": [
        "<node_internals>/**"
      ]
    },
    {
      "type": "chrome",
      "request": "launch",
      "name": "Launch Chrome",
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}/apps/web",
      "sourceMaps": true,
    }
  ],
  "compounds": [
    {
      "name": "Full Stack (API + Web)",
      "configurations": [
        "Launch API (NestJS)",
        "Launch Chrome"
      ]
    }
  ]
}
