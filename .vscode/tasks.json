{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "pnpm install",
      "type": "shell",
      "command": "pnpm",
      "args": ["install"],
      "problemMatcher": [],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "label": "pnpm run lint",
      "type": "shell",
      "command": "pnpm",
      "args": ["run", "lint"],
      "problemMatcher": {
        "pattern": {
          "regexp": "^([^\\s].*):(\\d+):(\\d+):\\s+(error|warning)\\s+(.*)$",
          "file": 1,
          "location": 2,
          "endLine": 2,
          "column": 3,
          "severity": 4,
          "message": 5
        }
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared"
      },
      "group": {
        "kind": "test",
        "isDefault": false
      }
    },
    {
      "label": "pnpm run lint:fix",
      "type": "shell",
      "command": "pnpm",
      "args": ["run", "lint:fix"],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "group": {
        "kind": "test",
        "isDefault": false
      }
    },
    {
      "label": "pnpm run format",
      "type": "shell",
      "command": "pnpm",
      "args": ["run", "format"],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "label": "pnpm run typecheck",
      "type": "shell",
      "command": "pnpm",
      "args": ["run", "typecheck"],
      "problemMatcher": {
        "pattern": {
          "regexp": "^([^\\s].*):(\\d+):(\\d+)\\s+-\\s+(error|warning)\\s+TS(\\d+):\\s+(.*)$",
          "file": 1,
          "location": 2,
          "endLine": 2,
          "column": 3,
          "severity": 4,
          "code": 5,
          "message": 6
        }
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared"
      },
      "group": {
        "kind": "test",
        "isDefault": true
      }
    },
    {
      "label": "pnpm run clean",
      "type": "shell",
      "command": "pnpm",
      "args": ["run", "clean"],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "label": "Full Quality Check (lint + typecheck + format)",
      "type": "shell",
      "dependsOn": ["pnpm run lint", "pnpm run typecheck", "pnpm run format"],
      "dependsOrder": "sequence",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared"
      },
      "group": {
        "kind": "test",
        "isDefault": false
      }
    }
  ]
}
